<!-- User's file -->

<div id="createUser">
<%= form_for :user, url: new_user_path do |user|%>
  <%= label_tag "name", "First Name: " %>
  <%= user.text_field :fname, placeholder: "First Name" %><br>
  <%= user.text_field :lname, placeholder: "Last Name" %><br>
  <%= user.text_field :email, placeholder: "email" %><br>
  <%= user.text_field :username, placeholder: "Username" %><br>
  <%= user.password_field :password, placeholder: "password" %><br>
  <%= user.submit "Save" %>
<% end %>
</div>

<div class="messageStyle">
  <%= @message %>
</div>
